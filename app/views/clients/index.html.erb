<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>

<h1>List Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client|%>
    <tr>
      <td><%=client.name%></td>
      <td><%= link_to "Show", clients_show_path(client) %></td>
      <td><%= link_to "Edit", clients_edit_path(client) %></td>
      <td><%= link_to 'Destroy', clients_delete_path(client), data: {:confirm => 'Are you sure?'}, :method => :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<ul>
  <li>
    <%= link_to  "Create new Client", clients_new_path %>
  </li>
</ul>