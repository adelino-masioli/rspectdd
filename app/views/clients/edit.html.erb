<% if @client.errors.any? %>
 <% @client.errors.full_messages.each do |message| %>
 <li><%= message %></li>
 <% end %>
<% end %>

<h1>New Client</h1>


<%= form_for @client, as: :patch, url: clients_update_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.label :smoker %><br/>
  <% {'Y': 'Yes', 'N': 'No'}.each do |key, value| %>
    <%= f.radio_button :smoker, key %> <%= value %><br/>
  <% end %>

  <%= f.submit 'Save Client' %>
<% end %>